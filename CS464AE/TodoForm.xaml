<Window x:Class="CS464AE.TodoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS464AE"
        mc:Ignorable="d"
        Title="Thêm/Sửa công việc" Height="500" Width="600"
        FontFamily="Segoe UI" FontSize="12"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2E86AB" Padding="15">
            <TextBlock x:Name="txtHeader" Text="➕ Thêm công việc mới" 
                      FontSize="20" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#F0F0F0" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock x:Name="txtStatus" Text="Sẵn sàng" FontSize="12"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                
                <!-- Tiêu đề -->
                <TextBlock Text="Tiêu đề công việc:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTitle" Padding="10" Height="35" FontSize="14" Margin="0,0,0,20"/>

                <!-- Mô tả -->
                <TextBlock Text="Mô tả chi tiết:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescription" Padding="10" Height="80" FontSize="14" 
                         TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                <!-- Danh mục -->
                <TextBlock Text="Danh mục:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbCategory" Padding="10" Height="35" FontSize="14" Margin="0,0,0,20">
                    <ComboBoxItem Content="Học tập"/>
                    <ComboBoxItem Content="Công việc"/>
                    <ComboBoxItem Content="Cá nhân"/>
                    <ComboBoxItem Content="Sức khỏe"/>
                    <ComboBoxItem Content="Gia đình"/>
                    <ComboBoxItem Content="Khác"/>
                </ComboBox>

                <!-- Hạn chót -->
                <TextBlock Text="Hạn chót:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpDueDate" Padding="10" Height="35" FontSize="14" Margin="0,0,0,20"/>

                <!-- Trạng thái (chỉ hiển thị khi sửa) -->
                <StackPanel x:Name="pnlStatus" Margin="0,0,0,20" Visibility="Collapsed">
                    <TextBlock Text="Trạng thái:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkCompleted" Content="Đã hoàn thành" FontSize="14"/>
                </StackPanel>

                <!-- Error Message -->
                <Border x:Name="errorBorder" 
                        Background="#FFE6E6" BorderBrush="Red" BorderThickness="1"
                        CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                    <TextBlock x:Name="txtErrorMessage" 
                              Foreground="Red" TextWrapping="Wrap" 
                              HorizontalAlignment="Center" Padding="10"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSave" Content="💾 Lưu" Click="BtnSave_Click"
                           Background="#2E86AB" Foreground="White" Padding="20,12" 
                           MinWidth="120" Height="45" FontSize="14" FontWeight="Bold" Margin="5,0"/>
                    <Button x:Name="btnCancel" Content="❌ Hủy" Click="BtnCancel_Click"
                           Background="#F18F01" Foreground="White" Padding="20,12" 
                           MinWidth="120" Height="45" FontSize="14" FontWeight="Bold" Margin="5,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
