<Window x:Class="CS464AE.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS464AE"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="800">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2E86AB" Padding="15">
            <TextBlock Text="🔐 Đăng nhập / Đăng ký" 
                      FontSize="20" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#F0F0F0" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock x:Name="txtStatus" Text="Sẵn sàng" FontSize="12"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Tab Control -->
                <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header="🔑 Đăng nhập" x:Name="tabLogin" Margin="-2,-1,-1.6,1" HorizontalAlignment="Right" Width="94">
                        <StackPanel Margin="20">
                            <TextBlock Text="Tên tài khoản:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtLoginUsername" Padding="10" Height="35" FontSize="14" Margin="0,0,0,15"/>

                            <TextBlock Text="Mật khẩu:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtLoginPassword" Padding="10" Height="35" FontSize="14" Margin="0,0,0,15"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="📝 Đăng ký" x:Name="tabRegister">
                        <StackPanel Margin="20">
                            <TextBlock Text="Tên tài khoản:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtRegisterUsername" Padding="10" Height="35" FontSize="14" Margin="0,0,0,15"/>

                            <TextBlock Text="Mật khẩu:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtRegisterPassword" Padding="10" Height="35" FontSize="14" Margin="0,0,0,15"/>

                            <TextBlock Text="Số điện thoại (tùy chọn):" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtRegisterPhone" Padding="10" Height="35" FontSize="14" Margin="0,0,0,15"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <!-- Error Message -->
                <Border x:Name="errorBorder" 
                        Background="#FFE6E6" BorderBrush="Red" BorderThickness="1"
                        CornerRadius="5" Margin="0,20,0,20" Visibility="Collapsed">
                    <TextBlock x:Name="txtErrorMessage" 
                              Foreground="Red" TextWrapping="Wrap" 
                              HorizontalAlignment="Center" Padding="10"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnMainAction" Content="🔑 Đăng nhập"
                           Background="#2E86AB" Foreground="White" Padding="20,12" 
                           MinWidth="120" Height="45" FontSize="14" FontWeight="Bold" Margin="5,0"/>
                    <Button x:Name="btnCancel" Content="❌ Hủy" Click="BtnCancel_Click" 
                           Background="#F18F01" Foreground="White" Padding="20,12" 
                           MinWidth="120" Height="45" FontSize="14" FontWeight="Bold" Margin="5,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
